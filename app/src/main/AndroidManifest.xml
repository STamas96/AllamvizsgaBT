<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sutot.buddieswithyourtravel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon_travel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controllers.Authentification.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.Authentification.LogInActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Controllers.Main.MainActivity" />
        <activity
            android:name=".Controllers.Authentification.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Controllers.Main.TripsActivity.CreateTripActivity" />
        <activity android:name=".Controllers.Main.Profile.EditProfileActivity" />
        <activity android:name=".Controllers.Main.TripsActivity.EditTripsActivity" />
        <activity android:name=".Controllers.Main.TripsActivity.DetailedTripActivity" />
        <activity android:name=".Controllers.Main.Profile.ProfileActivity" />
        <activity android:name=".Controllers.Main.SearchFriendsActivity" />
        <activity android:name=".Controllers.Main.CommentsActivity"></activity>
    </application>

</manifest>