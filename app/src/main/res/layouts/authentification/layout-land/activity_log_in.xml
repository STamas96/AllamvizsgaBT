<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.sutot.buddieswithyourtravel.Controllers.Authentification.LogInActivity">

    <!-- megjelenitunk egy gorgetheto nezetet-->
    <ScrollView
        android:id="@+id/LogIn_ParentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/LogIn_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LogIn_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/faster_one"
                android:text="@string/log_in"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/LogIn_EmailLabel"
                style="@style/MyTextViewStyle"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="@string/email"
                android:textAlignment="center"
                android:typeface="sans" />

            <EditText
                android:id="@+id/LogIn_EmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/LogIn_EmailLabel"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:ems="10"
                android:hint="@string/enteremail"
                android:inputType="textEmailAddress"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/LogIn_PasswordLabel"
                style="@style/MyTextViewStyle"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/password"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/LogIn_PasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/LogIn_EmailEditText"
                android:layout_below="@+id/LogIn_EmailEditText"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/enterpassword"
                android:inputType="textPassword"
                android:textAlignment="center" />

            <Button
                android:id="@+id/LogIn_SignInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_weight="3"
                android:text="@string/log_in"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/LogIn_GetHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/gethelp"
                android:textAlignment="center"
                android:textColor="#fcfffc"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14dp"
                android:background="?android:attr/colorAccent" />

            <TextView
                android:id="@+id/LogIn_CreateANewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/createanewaccount"
                android:textAlignment="center"
                android:textColor="#fcfffc"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
