<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b5b5b5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Trip_Title_Header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/Pacifico"
            android:gravity="center"
            android:textSize="24dp"
            android:background="#919191"/>
        <LinearLayout
            android:id="@+id/Trip_Dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/Trip_StartDate">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:id="@+id/Trip_StartDate_Image"
                    android:layout_weight="4"
                    android:tint="#000000"
                    android:src="@drawable/ic_departures"/>

                <TextView
                    android:id="@+id/Trip_StartDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#b5b5b5"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/Trip_EndDate">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Trip_EndDate_Image"
                    android:background="#FFFFFF"
                    android:layout_weight="4"
                    android:src="@drawable/ic_arrivals"/>

                <TextView
                    android:id="@+id/Trip_EndDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:background="#b5b5b5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <ImageSwitcher
            android:id="@+id/Trip_Image"
            android:layout_width="match_parent"
            android:layout_height="300dp"></ImageSwitcher>

        <TextView
            android:id="@+id/Trip_Short_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b5b5b5"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Trip_Header_bar">
            <LinearLayout
                android:id="@+id/Trip_Interested_Header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:tint="#ffee00"
                    android:src="@drawable/ic_star_blue"/>

                <TextView
                    android:id="@+id/Trip_Interested_Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:background="#b5b5b5"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Trip_Owner_Header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:tint="#4c0705"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_owner_blue" />

                <TextView
                    android:id="@+id/Trip_Owner_User"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#b5b5b5"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/Trip_Uploaded_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#b5b5b5"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="11dp" />
    </LinearLayout>
    
    

</android.support.v7.widget.CardView>